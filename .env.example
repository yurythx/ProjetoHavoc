# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# SECURITY WARNING: keep the secret key used in production secret!
SECRET_KEY=django-insecure-your-secret-key-here-change-in-production

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Para SQLite (padrão)
DATABASE_URL=sqlite:///db.sqlite3

# Para PostgreSQL (descomente e configure)
# DATABASE_URL=postgres://user:password@localhost:5432/projeto_havoc_db

# Para MySQL (descomente e configure)
# DATABASE_URL=mysql://user:password@localhost:3306/projeto_havoc_db

# =============================================================================
# EMAIL SETTINGS
# =============================================================================

# Configurações de email
DEFAULT_FROM_EMAIL=no-reply@seudominio.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app
EMAIL_USE_TLS=True

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Configurações de segurança (ativar em produção)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False

# =============================================================================
# INTERNATIONALIZATION
# =============================================================================

# Idioma e timezone
LANGUAGE_CODE=pt-br
TIME_ZONE=America/Sao_Paulo

# =============================================================================
# SITE SETTINGS
# =============================================================================

# Domínio do site
SITE_DOMAIN=http://localhost:8000

# =============================================================================
# SOCIAL AUTH SETTINGS (OPCIONAL)
# =============================================================================

# Google OAuth (opcional)
# GOOGLE_OAUTH2_CLIENT_ID=seu-client-id-google
# GOOGLE_OAUTH2_CLIENT_SECRET=seu-client-secret-google

# GitHub OAuth (opcional)
# GITHUB_CLIENT_ID=seu-client-id-github
# GITHUB_CLIENT_SECRET=seu-client-secret-github

# =============================================================================
# LDAP SETTINGS (OPCIONAL)
# =============================================================================

# Configurações LDAP (opcional)
# LDAP_SERVER=ldap.seudominio.com
# LDAP_PORT=389
# LDAP_BIND_DN=cn=admin,dc=seudominio,dc=com
# LDAP_BIND_PASSWORD=sua-senha-ldap
# LDAP_USER_SEARCH_BASE=ou=users,dc=seudominio,dc=com
